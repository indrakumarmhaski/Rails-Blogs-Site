<div class="container">
    <%= form_with(model: blog, local: true, html: { multipart: true } ) do |form| %>
      <% if blog.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

          <ul>
          <% blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>:
        <%= form.text_field :title %>
      </div>

      <div class="field">
        <%= form.label :description %>:
        <br>
        <%= form.text_area :description, cols: '50' %>
      </div>

      <div class="field">
        <%= form.label :content %>:
        <br>
        <%= form.text_area :content, cols: '50' %>
      </div>

      <div class="field">
        <%= form.label :thumbimg %>
        <%= form.file_field :thumbimg %>
      </div>

      <div class="field">
        <%= form.label :mainimg %>
        <%= form.file_field :mainimg %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>

</div>
