

    

      <div class="jumbotron p-3 p-md-5 text-white bg-dark" style="border-radius: 0em !important;">
        <div class="col-md-6 px-0">
          <h1 class="display-4 font-italic">Here is the list of all blogs.</h1>
          <p class="lead my-3">You can show them and manage according to you.</p>
        </div>
        <%= link_to 'New Blog', new_blog_path, class:'btn btn-primary' if logged_in?(:admin,:user) %>
      </div>





  <div class="container-fluid">

    <div class="row mb-2">
      <% @blogs.each do |b| %>
          <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
              <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                  <%= link_to "#{ b.title }", b , class: 'text-dark' %>
                </h3>
                <div class="mb-1 text-muted">
                  <%= b.created_at.to_s(:long) %>
                  <br>
                  by: <%= b.user.name %>
                </div>
                <p class="card-text mb-auto">
                  <%= b.description %> 
                </p>
                <%= link_to 'Continue reading', b %>
              </div>
              <%= image_tag(b.thumbimg_url,class: 'card-img-right index-thumb flex-auto d-none d-lg-block') %>
            </div>
          </div>        
      <% end %>
    </div>
  </div>

  <%= paginate @blogs %>

    <footer class="blog-footer">
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>